---
export interface Props {
    btnUrl: string;
    btnOpen: boolean;
    btnColor: string;
    btnDeepColor?: string;
}

const {btnUrl, btnOpen, btnColor, btnDeepColor} = Astro.props as Props;
---

<a href={btnUrl} class={`btn ${btnOpen && 'btnOpen'}`}>
    <slot />
</a>

<style define:vars={{btnColor, btnDeepColor}}>
    
    .btn {
        font-family: inter, sans-serif;
        font-size: 1rem;
        font-weight: 550;
        letter-spacing: 0.1rem;
        line-height: 1.5rem;
        padding: 0.75rem 1.5rem;
        margin-left: 0.5rem;
        text-decoration: none;
        color: #fff;
        background-color: var(--btnColor);
        transition: all 300ms ease;
    }

    .btnOpen {
        color: var(--btnColor);
        background-color: #fff;
        box-shadow: inset 0 0 0 1px var(--btnColor);
    }

    .btn:hover {
        background-color: var(--btnDeepColor);
    }

    .btnOpen:hover {
        box-shadow: inset 0 0 0 2px var(--btnColor);
    }
</style>