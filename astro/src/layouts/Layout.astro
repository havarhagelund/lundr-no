---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const popstar = "#B24C63";
const blueGreen = "#4796AE";
const cadet = "#556F7A";
const torquoiseGreen = "#AFE3C0";
const DarkSeaGreen = "#90C290";
---

<!DOCTYPE html>
<html lang="no">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>lundr.no</title>

    <style is:global>
      @font-face {
        font-family: "libertine";
        src: url("/fonts/linlibertine_adrs-webfont.woff") format("woff2");
      }
      @font-face {
        font-family: "inter";
        src: url("/fonts/Inter-VariableFont_slnt,wght.ttf") format("woff2");
      }
      html {
        scroll-behavior: smooth;
      }

      body {
        margin: 0px;
        background-color: #FAFAFA;
        font-family: "inter", sans-serif;
        color: #222829;
        font-size: 1rem;
        line-height: 1.5;
        letter-spacing: -0.01rem;
      }

      h1 {
        font-family: "libertine", sans-serif;
        font-size: 5rem;
        letter-spacing: -0.2rem;
        font-weight: 400;
        text-align: center;
        margin: 0;
        margin-bottom: 2rem;
        line-height: 1;
      }

      h2 {
        font-family: "libertine", sans-serif;
        font-size: 3rem;
        margin: 0;
        letter-spacing: -0.15rem;
        line-height: 1;

      }
    </style>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

